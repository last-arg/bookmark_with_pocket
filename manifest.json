{
  "manifest_version": 2,
  "name": "Bookmarks with Pocket",
  "version": "0.1.0",
  "permissions": [
    "*://getpocket.com/*",
    "activeTab",
    "tabs",
    "sessions",
    "identity",
    "menus",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "bookmarks-with-pocket@mozilla.org"
    }
  },
  "background": {
    // To see output go about:debbugging -> Inspect addon
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_title": "Settings"
  }
